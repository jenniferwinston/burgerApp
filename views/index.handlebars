<div class="container">

  <div class="jumbotron">
      <h1>Eat My Burger</h1>

      <ul>
        {{#each burgers}}
          <li>
            <p>
              {{this.id}}. {{this.burger_name}}

              <form action="/delete?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">Delete</button>
              </form>
            </p>
          </li>
        {{/each}}
      </ul>

      <h2>Add a Burger to Devour</h2>
      <form method="POST" action="/create" class="button-size">
      	<textarea type="text" name="burger_name"></textarea>
      	<button type="submit">Save Order</button>
      </form>

      <h2>Update a Burger</h2>
      <form action="/update?_method=PUT" method="POST" class="button-size">
        <input type="text" name="id" placeholder="id">
      	<textarea type="text" name="burger_name" placeholder="what do you want to update this burger to?"></textarea>
      	<button type="submit">Update</button>
      </form>
  </div>
</div>      